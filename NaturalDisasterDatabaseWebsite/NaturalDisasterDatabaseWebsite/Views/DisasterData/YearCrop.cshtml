<a asp-controller="DisasterData" asp-action="YearCreateCrop"><i class="glyphicon glyphicon-plus"></i><span>添加年度灾害数据：农作物生物灾害</span></a>
<table class="table">
    <thead>
        <tr>
            <th style="width:5%;">序号</th>
            <th style="width:8%;">年份</th>
            <th style="width:14%;">发生面积(万公顷次)</th>
            <th style="width:14%;">防治面积(万公顷次)</th>
            <th style="width:10%;">挽回损失(万吨)</th>
            <th style="width:10%;">实际损失(万吨)</th>
            <th style="width:34%;">备注</th>
            <th style="width:5%;">操作</th>
        </tr>
    </thead>
    <tbody>
        @{
            var i = 1;
            var count = 0;
            @foreach (var cropyear in ViewBag.cropyear)
            {
            <tr>
                <td class="t_center">@i</td>
                <td>@cropyear.cbYears</td>
                <td>@cropyear.cbOccurArea</td>
                <td>@cropyear.cbControlArea</td>
                <td>@cropyear.cbSaveEconomic</td>
                <td>@cropyear.cbRealEconomic</td>
                <td class="newsInfo" style="text-align:justify; text-align-last:left;">
                    <div class="newInfoTruncation newInfoTruncation3" id="boxId">@Html.Raw(System.Net.WebUtility.UrlDecode(@cropyear.cbRemarks))</div>
                    <span>@Html.Raw(System.Net.WebUtility.UrlDecode(@cropyear.cbRemarks))</span>
                </td>
                <td>
                    <a asp-controller="DisasterData" asp-action="YearEditCrop" asp-route-id="@cropyear.ID">编辑</a>
                    <a asp-controller="DisasterData" asp-action="YearDeleteCrop" asp-route-id="@cropyear.ID">删除</a>
                </td>
            </tr>
                i++;
                count = i - 1;
            }
            @*@count;*@
        }
    </tbody>
</table>
